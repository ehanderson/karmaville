<h1>KarmaVille's Most Famous</h1>
<table class="table table-bordered table-striped">
  <tr>
    <th>Karma</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email</th>
  </tr>
  <% @users.each do |user| %>
    <%= render 'user_row', :user => user %>
  <% end %>
</table>

<div class="pagination">
  <ul>
    <li><a href="/?page=<%= @page_number - 5%>">Prev</a></li>
    <li><a href="#"><%= @page_number - 2 %></a></li>
    <li><a href="#"><%= @page_number -1 %></a></li>
    <li class="active"><a href="#"><%= @page_number%></a></li>
    <li><a href="#"><%= @page_number + 1 %></a></li>
    <li><a href="#"><%= @page_number + 2 %></a></li>
    <li><a href="/?page=<%= @page_number + 5%>">Next</a></li>
  </ul>
</div>
